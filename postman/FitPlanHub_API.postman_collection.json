					}
				},
				{
					"name": "Check Subscription",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/subscriptions/check?planId=1",
							"host": ["{{base_url}}"],
							"path": ["subscriptions", "check"],
							"query": [
								{
									"key": "planId",
									"value": "1"
								}
							]
						},
						"description": "Check if the authenticated user is subscribed to a specific plan."
					}
				}
			]
		},
