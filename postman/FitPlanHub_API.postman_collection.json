						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"30-Day Weight Loss Program\",\n  \"description\": \"A comprehensive weight loss plan designed to help you lose weight safely and effectively over 30 days. Includes meal plans, workout routines, and progress tracking.\",\n  \"price\": 49.99,\n  \"duration\": 30\n}"
						},
						"url": {
							"raw": "{{base_url}}/plans",
							"host": ["{{base_url}}"],
							"path": ["plans"]
						},
						"description": "Create a new fitness plan. Requires trainer authentication."
					}
				},
				{
					"name": "Update Plan",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Plan Title\",\n  \"price\": 59.99\n}"
						},
						"url": {
							"raw": "{{base_url}}/plans/1",
							"host": ["{{base_url}}"],
							"path": ["plans", "1"]
						},
						"description": "Update an existing fitness plan. Trainers can only update their own plans."
					}
				},
				{
					"name": "Delete Plan",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/plans/1",
							"host": ["{{base_url}}"],
							"path": ["plans", "1"]
						},
						"description": "Delete a fitness plan. Trainers can only delete their own plans."
					}
				},
				{
					"name": "Get Trainer's Plans",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/plans/trainer/my-plans",
							"host": ["{{base_url}}"],
							"path": ["plans", "trainer", "my-plans"]
